{
  "name": "@chainsafe/lodestar",
  "description": "A Typescript implementation of the beacon chain",
  "license": "LGPL-3.0",
  "author": "ChainSafe Systems",
  "homepage": "https://github.com/ChainSafe/lodestar#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ChainSafe/lodestar.git"
  },
  "bugs": {
    "url": "https://github.com/ChainSafe/lodestar/issues"
  },
  "version": "0.22.0",
  "main": "lib/index.js",
  "bin": {
    "lodestar": "./bin/lodestar"
  },
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/**/*.js.map"
  ],
  "scripts": {
    "clean": "rm -rf lib && rm -f *.tsbuildinfo",
    "benchmark": "ts-node test/benchmarks",
    "build": "concurrently \"yarn build:lib\" \"yarn build:types\"",
    "build:typedocs": "typedoc --exclude src/index.ts --out typedocs src",
    "build:lib": "babel src -x .ts -d lib --source-maps",
    "build:lib:watch": "yarn run build:lib --watch",
    "build:release": "yarn clean && yarn run build && yarn run build:typedocs",
    "build:types": "tsc -p tsconfig.build.json",
    "build:types:watch": "yarn run build:types --watch",
    "check-types": "tsc",
    "coverage": "codecov -F lodestar",
    "lint": "eslint --color --ext .ts src/ test/",
    "lint:fix": "yarn run lint --fix",
    "pretest": "yarn run check-types",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "nyc --cache-dir .nyc_output/.cache -e .ts mocha 'test/unit/**/*.test.ts'",
    "test:e2e": "mocha 'test/e2e/**/*.test.ts'",
    "test:sim": "mocha 'test/sim/**/*.test.ts'",
    "test:sim:singleProcess": "mocha 'test/sim/singleNodeSingleProcess.test.ts'",
    "test:sim:singleProcessMultiNode": "mocha 'test/sim/multiNodeSingleProcess.test.ts'",
    "test:sim:multiProcess": "mocha 'test/sim/multiNodeMultiProcess.test.ts'"
  },
  "dependencies": {
    "@chainsafe/bls": "6.0.1",
    "@chainsafe/discv5": "^0.5.1",
    "@chainsafe/lodestar-api": "^0.22.0",
    "@chainsafe/lodestar-beacon-state-transition": "^0.22.0",
    "@chainsafe/lodestar-config": "^0.22.0",
    "@chainsafe/lodestar-db": "^0.22.0",
    "@chainsafe/lodestar-fork-choice": "^0.22.0",
    "@chainsafe/lodestar-params": "^0.22.0",
    "@chainsafe/lodestar-types": "^0.22.0",
    "@chainsafe/lodestar-utils": "^0.22.0",
    "@chainsafe/lodestar-validator": "^0.22.0",
    "@chainsafe/persistent-merkle-tree": "^0.3.2",
    "@chainsafe/snappy-stream": "5.0.0",
    "@chainsafe/ssz": "^0.8.6",
    "@ethersproject/abi": "^5.0.0",
    "@types/datastore-level": "^1.1.1",
    "abort-controller": "^3.0.0",
    "bl": "^4.0.2",
    "cross-fetch": "^3.1.4",
    "datastore-level": "^2.0.0",
    "deepmerge": "^3.2.0",
    "es6-promisify": "6.0.2",
    "fastify": "3.15.1",
    "fastify-cors": "^6.0.1",
    "gc-stats": "^1.4.0",
    "http-terminator": "^2.0.3",
    "interface-datastore": "^2.0.0",
    "it-all": "^1.0.2",
    "it-pipe": "^1.1.0",
    "libp2p": "^0.30.2",
    "libp2p-bootstrap": "^0.12.1",
    "libp2p-gossipsub": "^0.8.0",
    "libp2p-interfaces": "^0.8.3",
    "libp2p-mdns": "^0.15.0",
    "libp2p-mplex": "^0.10.1",
    "libp2p-noise": "^2.0.5",
    "libp2p-tcp": "^0.15.3",
    "multiaddr": "^8.1.2",
    "peer-id": "^0.14.3",
    "prom-client": "^13.1.0",
    "prometheus-gc-stats": "^0.6.3",
    "snappyjs": "^0.6.0",
    "stream-to-it": "^0.2.0",
    "strict-event-emitter-types": "^2.0.0",
    "threads": "^1.6.3",
    "varint": "^5.0.0",
    "wtfnode": "^0.8.4"
  },
  "devDependencies": {
    "@types/bl": "^2.1.0",
    "@types/es6-promisify": "6.0.0",
    "@types/eventsource": "^1.1.5",
    "@types/http-terminator": "^2.0.1",
    "@types/it-all": "^1.0.0",
    "@types/leveldown": "^4.0.2",
    "@types/prometheus-gc-stats": "^0.6.1",
    "@types/supertest": "^2.0.8",
    "@types/tmp": "^0.2.0",
    "@types/varint": "^5.0.0",
    "benchmark": "^2.1.4",
    "eventsource": "^1.1.0",
    "rewiremock": "^3.14.3",
    "rimraf": "^3.0.2",
    "tmp": "^0.2.1"
  },
  "keywords": [
    "ethereum",
    "eth2",
    "beacon",
    "blockchain"
  ]
}
