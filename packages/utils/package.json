{
  "name": "@chainsafe/lodestar-utils",
  "description": "Utilities required across multiple lodestar packages",
  "license": "Apache-2.0",
  "author": "ChainSafe Systems",
  "homepage": "https://github.com/ChainSafe/lodestar#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ChainSafe/lodestar.git"
  },
  "bugs": {
    "url": "https://github.com/ChainSafe/lodestar/issues"
  },
  "version": "0.26.0",
  "main": "lib/index.js",
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "*.d.ts",
    "*.js"
  ],
  "scripts": {
    "clean": "rm -rf lib && rm -f *.tsbuildinfo",
    "build": "concurrently \"yarn build:lib\" \"yarn build:types\"",
    "build:typedocs": "typedoc --exclude src/index.ts --out typedocs src",
    "build:lib": "babel src -x .ts -d lib --source-maps",
    "build:lib:watch": "yarn run build:lib --watch",
    "build:release": "yarn clean && yarn build && yarn build:typedocs",
    "build:types": "tsc -p tsconfig.build.json",
    "build:types:watch": "yarn run build:types --watch",
    "check-types": "tsc",
    "lint": "eslint --color --ext .ts src/ test/",
    "lint:fix": "yarn run lint --fix",
    "pretest": "yarn run check-types",
    "test:unit": "mocha 'test/**/*.test.ts'",
    "check-readme": "typescript-docs-verifier"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@chainsafe/abort-controller": "^3.0.1",
    "@chainsafe/ssz": "^0.8.11",
    "any-signal": "2.1.1",
    "bigint-buffer": "^1.1.5",
    "chalk": "^2.4.2",
    "js-yaml": "^3.13.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "winston-transport": "^4.3.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.1",
    "@types/triple-beam": "^1.3.2",
    "triple-beam": "^1.3.0"
  },
  "keywords": [
    "ethereum",
    "eth2",
    "beacon",
    "blockchain"
  ]
}
