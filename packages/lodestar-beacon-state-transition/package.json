{
  "name": "@chainsafe/lodestar-beacon-state-transition",
  "description": "Beacon Chain state transition function and utils",
  "license": "Apache-2.0",
  "author": "ChainSafe Systems",
  "homepage": "https://github.com/ChainSafe/lodestar#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:ChainSafe/lodestar.git"
  },
  "bugs": {
    "url": "https://github.com/ChainSafe/lodestar/issues"
  },
  "version": "0.5.0",
  "main": "lib/index.js",
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/**/*.js.map"
  ],
  "scripts": {
    "build": "yarn build:lib && yarn check-types && yarn build:types",
    "build:docs": "typedoc --exclude src/index.ts --out docs src",
    "build:lib": "babel src -x .ts -d lib --source-maps",
    "build:release": "yarn clean && yarn build",
    "build:types": "tsc --incremental --declaration --outDir lib --project tsconfig.build.json --emitDeclarationOnly",
    "check-types": "tsc --noEmit --incremental",
    "clean": "rm -rf lib && rm -f tsconfig.tsbuildinfo && rm -f tsconfig.build.tsbuildinfo",
    "lint": "eslint --color --ext .ts src/",
    "lint:fix": "eslint --color --ext .ts src/ --fix",
    "prepublishOnly": "yarn build",
    "test:unit": "mocha --colors -r ts-node/register 'test/**/*.test.ts'"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@chainsafe/bit-utils": "0.1.6",
    "@chainsafe/bls": "0.3.0",
    "@chainsafe/lodestar-config": "^0.5.0",
    "@chainsafe/lodestar-utils": "^0.5.0",
    "@chainsafe/ssz": "^0.6.0",
    "bigint-buffer": "^1.1.5",
    "bn.js": "^5.0.0",
    "buffer-xor": "^2.0.2"
  },
  "devDependencies": {
    "@types/chai": "4.2.0",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0"
  },
  "keywords": [
    "ethereum",
    "eth2",
    "beacon",
    "blockchain"
  ]
}
