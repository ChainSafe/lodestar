{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [180]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": false,
    "interface-name": [true, "never-prefix"],
    "indent": [true, "spaces", 2],
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [180]
    }
  }
}
