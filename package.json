{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=12.9.0 <13"
  },
  "workspaces": [
    "packages/*"
  ],
  "version": "0.11.0",
  "scripts": {
    "postinstall": "lerna run clean && lerna run build",
    "build": "lerna run build",
    "build:tsc": "lerna run build:tsc",
    "build:docs": "lerna run clean && lerna run build && lerna run build:typedocs && lerna run build:refdocs && ./scripts/prepare-docs.sh",
    "build:lib:watch": "lerna run build:lib:watch --parallel",
    "build:types:watch": "lerna run build:types:watch --parallel",
    "build:watch": "run-p build:lib:watch build:types:watch",
    "lint": "lerna run lint --no-bail",
    "coverage": "lerna run coverage --no-bail",
    "test:unit": "lerna run test:unit --no-bail",
    "test:e2e": "lerna run test:e2e --no-bail",
    "test:e2e:sim": "lerna run test:e2e:sim --no-bail",
    "test:spec-min": "lerna run test:spec-min --no-bail",
    "test:spec-fast": "lerna run test:spec-fast --no-bail",
    "test:spec-main": "lerna run test:spec-main --no-bail",
    "cli": "node --trace-deprecation ./packages/lodestar-cli/bin/lodestar"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/generator": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-syntax-bigint": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@mpetrunic/eslint-import-resolver-lerna": "1.0.0",
    "@types/chai": "4.2.0",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^8.0.3",
    "@types/node": "^12.12.21",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "babel-plugin-const-enum": "^1.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "lerna": "^3.20.2",
    "mocha": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "typedoc": "^0.17.8",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typedoc-plugin-internal-external": "^2.2.0",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0"
  },
  "optionalDependencies": {
    "@chainsafe/eth2-spec-tests": "0.12.3"
  },
  "dependencies": {}
}
