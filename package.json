    "lerna": "^3.20.2",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "typedoc": "^0.17.8",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typedoc-plugin-internal-external": "^2.2.0",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0"
